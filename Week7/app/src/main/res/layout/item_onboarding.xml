<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:id="@+id/lotty_icon"
        android:layout_height="@dimen/lottie_image_size"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/covid_icon"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_nam"
        android:layout_marginTop="@dimen/standard_padding"
        app:layout_constraintTop_toBottomOf="@id/lotty_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textSize="@dimen/onboard_itle_size"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>